<% include layout/header.ejs %>
<div class="main">
    <div class="container">
        <div class="content">
            <% for (var i = 0;i < posts.length; i++ ) { %>
            <div class="post">
                <div class="post-top">
                    <h2><%= posts[i].title %></h2>
                </div>
                <div class="post-body">
                    <p><%= posts[i].body %></p>
                </div>
                <div class="post-footer">
                    <div class="author">
                        Author: <a href="/">Marchin</a>
                    </div>
                    <a href="/">Comments</a>
                </div>
            </div>
            <% } %>
            <div class="pagination">
                <% if (current > 2){ %>
                <a href="/archive/<%= Number(current) - 1 %>" class="new">&#8592 New posts</a>
                <% } %>
                <% if (current == 2){ %>
                <a href="/" class="new">&#8592 Main page</a>
                <% } %>
                <% if (current > 0 && current < pages){ %>
                <a href="/archive/<%= Number(current) + 1 %>" class="old">Old posts &#8594</a>
                <% } %>
            </div>
        </div>
        <% include layout/sidebar.ejs %>
    </div>
</div>
<% include layout/footer.ejs %>
