<% include ../layout/header.ejs %>
<div class="main">
    <div class="container">
        <div class="content">
            <% for (var i = 0;i < posts.length; i++ ) { %>
            <div class="post">
                <div class="post-top">
                    <h2>
                        <a href="/posts/<%= posts[i].url %>"><%= posts[i].title %></a>
                        <% if (posts[i].owner.login === user.login) { %>
                        <a href="/post/edit/<%= posts[i].id %>" title="Edit post">
                            &#9998;</a>
                        <% } %>
                    </h2>
                </div>
                <div class="post-body-main">
                    <%- posts[i].body %>
                </div>
                <div class="post-footer">
                    <div class="author">
                        Author: <a href="/users/<%= posts[i].owner.login %>"><%= posts[i].owner.login %></a>
                    </div>
                    <a href="/posts/<%= posts[i].url %>#<%= posts[i].id %>">Comments: <%= posts[i].commentCount %></a>
                </div>
            </div>
            <% } %>
            <div class="pagination">
                <% if (current > 2){ %>
                <a href="/archive/<%= Number(current) - 1 %>" class="new">&#8592 New posts</a>
                <% } %>
                <% if (current == 2){ %>
                <a href="/" class="new">&#8592 Main page</a>
                <% } %>
                <% if (current > 0 && current < pages){ %>
                <a href="/archive/<%= Number(current) + 1 %>" class="old">Old posts &#8594</a>
                <% } %>
            </div>
        </div>
        <% include ../layout/sidebar.ejs %>
    </div>
</div>
<% include ../layout/footer.ejs %>
